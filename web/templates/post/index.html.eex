<h1>All Posts</h1>

<%= for post <- @posts do %>
  <div class="row">
    <h2><%= post.title %></h2>
    <%= link 'detail', to: post_path(@conn, :show, post) %>
    <%= link 'edit', to: post_path(@conn, :edit, post) %>
    <%= link 'delete', to: post_path(@conn, :delete, post), method: :delete %>
  </div>
<% end %>
